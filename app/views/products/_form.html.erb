<div class="mt-6 sm:mx-auto sm:w-full sm:max-w-md">
    <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
    <%= form_with(model: product, html: {class: "space-y-6" }) do |form| %>
      <% if product.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(product.errors.count, "error") %> prevented this product from being saved:</h2>
          <ul>
            <% product.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
        
        <div class="relative border border-gray-300 rounded-md px-3 py-2 shadow-sm focus-within:ring-1  focus-within:ring-indigo-600 focus-within:border-indigo-600">
           <%= form.label :name, class: "absolute -top-2 left-2 -mt-px inline-block px-1 bg-white text-xs font-medium text-gray-900" %>
          <%= form.text_field :name, class: "block w-full border-0 p-0 text-gray-900 placeholder-gray-500 focus:ring-0 md:text-md", placeholder: "Product name" %>
        </div>

        <div class="relative border border-gray-300 rounded-md px-3 py-2 shadow-sm focus-within:ring-1  focus-within:ring-indigo-600 focus-within:border-indigo-600">
          <%= form.label :description, class: "absolute -top-2 left-2 -mt-px inline-block px-1 bg-white text-xs font-medium text-gray-900" %>
          <%= form.text_area :description, class: "border-0 focus:ring-0 md:text-md w-full" %>
        </div>

        <div class="mt-6 grid grid-cols-2 gap-2" >
          <div class="relative border border-gray-300 rounded-md px-3 py-2 shadow-sm focus-within:ring-1  focus-within:ring-indigo-600 focus-within:border-indigo-600">
              <%= form.label :price, class: "absolute -top-2 left-2 -mt-px inline-block px-1 bg-white text-xs font-medium text-gray-900" %>
              <%= form.number_field :price, step: 0.5, class: "focus:ring-0 block w-full pl-2 pr-12 md:text-md border-0", placeholder: "0.00", min: "0" %>
              <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
                <span class="text-gray-500 sm:text-sm" id="price-currency">
                  USD
                </span>
              </div>
          </div>

          <div class="relative border border-gray-300 rounded-md px-3 py-2 shadow-sm focus-within:ring-1  focus-within:ring-indigo-600 focus-within:border-indigo-600">
              <%= form.label :stock_quantity, class: "absolute -top-2 left-2 -mt-px inline-block px-1 bg-white text-xs font-medium text-gray-900"%>
              <%= form.number_field :stock_quantity, min:"0", class: "block w-full border-0 p-2 text-gray-900 placeholder-gray-500 focus:ring-0 md:text-md", placeholder:"stock quantity" %>
          </div>
        </div>

        <div>
          <%= form.submit "ADD PRODUCT", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
          
        </div>
    <% end %>

    </div>
  </div>
